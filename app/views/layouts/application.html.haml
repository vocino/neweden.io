%html{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}

    = title site: "NewEden.io", separator: '|', reverse: true, reverse_on_default: true
    = description default: "EVE Online is a massive multiplayer online game that offers limitless potential to discover, explore and conquer an amazing science fiction universe where you pilot spaceships, fight, trade, and form corporations and alliances with other players."
    = keywords lowercase: true, default: "eve online, eve, eve online isk, isk making, how to make isk, eve online app"

    -unless Rails.env.production?
      = noindex

    %meta{name: "viewport", content: "width=device-width,initial-scale=1,user-scalable=no"}

    = render 'layouts/regions/favicon'

    = stylesheet_link_tag    'application', 'data-turbolinks-track' => true
    - if content_for?(:styles_header)
      = yield :styles_header
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    - if content_for?(:scripts_header)
      = yield :scripts_header

    = csrf_meta_tags

    = render 'layouts/modules/livereload'

  %body
    = render 'layouts/modules/flash'
    .application
      %main#main{role: 'main'}
        = yield

      = render 'layouts/regions/sidebar_user'

    - if content_for?(:scripts_footer)
      = yield :scripts_footer